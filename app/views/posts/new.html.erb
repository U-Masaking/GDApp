<%= stylesheet_link_tag "application", :media => "all" %>
<%= stylesheet_link_tag "posts", :media => "all" %>

<div class="row">
  <div class="col-2">
  </div>
  <div class="col-8 text-center">
    <div class="card text-center new">
      <div class="card-body">

        <% if @user.avatar? %>
          <%= image_tag @user.avatar.icon.url, class: 'avatar' %>
        <% else %>
          <%= image_tag 'default.jpg', class: 'default' %>
        <% end %>
          <span class="fw-bold"><%= @user.name %></span>

        <h2 class="card-title">新規投稿</h2>
        
        <% if @post.errors.any? %>
          <div>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @post do |form| %>
    
          <div class="field">
            <%= form.label :タイトル %><br />
            <%= form.text_field :title, class: "form-control", :placeholder => "タイトル", size: 30 %>
          </div>
    
          <div class="field">
            <%= form.label :募集内容 %><br />
            <%= form.text_area :body, class: "form-control", :placeholder => "テキスト", size: "30x10" %>
          </div>
    
          <div class="field">
            <%= form.label :start_on, "開始時間" %>
            <%= form.datetime_field :start_on, class: "form-control" %>
          </div>
    
          <div class="field">
            <%= form.label :end_on, "終了時間" %>
            <%= form.datetime_field :end_on, class: "form-control" %>
          </div>
    
          <div class="field">
            <%= form.submit %>
          </div>
    
        <% end %>
    
      </div>
    </div>
  </div>
  <div class="col-2">
  </div>
</div>