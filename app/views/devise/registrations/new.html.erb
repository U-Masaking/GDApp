<%= stylesheet_link_tag "application", :media => "all" %>
<%= stylesheet_link_tag "registrations", :media => "all" %>

<div class="card text-center new">
  <div class="card-body">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2 class="card-title">新規登録</h2>
    
      <div class="field">
        <%= f.text_field :name, :class => "form-control", :placeholder => "ユーザー名" %>
        <% if resource.errors.include?(:name) %>
          <% resource.errors.full_messages_for(:name).each do |msg| %>
            <p class="alert"><%= msg %></p>
          <% end %>
        <% end %>
      </div>

      <div class="field">
        <%= f.email_field :email, :class => "form-control", :placeholder => "メールアドレス", autofocus: true, autocomplete: "email" %>
        <% if resource.errors.include?(:email) %>
          <% resource.errors.full_messages_for(:email).each do |msg| %>
            <p class="alert"><%= msg %></p>
          <% end %>
        <% end %>
      </div>

      <div class="field">
        <%= f.password_field :password, :class => "form-control", :placeholder => "パスワード", autocomplete: "new-password" %>
        <% if resource.errors.include?(:password) %>
          <% resource.errors.full_messages_for(:password).each do |msg| %>
            <p class="alert"><%= msg %></p>
          <% end %>
        <% end %>
      </div>
    
      <div class="field">
        <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "パスワード（確認）", autocomplete: "new-password" %>
        <% if resource.errors.include?(:password_confirmation) %>
          <% resource.errors.full_messages_for(:password_confirmation).each do |msg| %>
            <p class="alert"><%= msg %></p>
          <% end %>
        <% end %>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録", :class => "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="login">
      <p><span>--------</span>既に登録されていますか？<span>--------</span></p>
      <%= link_to "ログイン", new_user_session_path %>
    </div>
    
  </div>
</div>

