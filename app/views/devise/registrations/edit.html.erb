<%= stylesheet_link_tag "application", :media => "all" %>
<%= stylesheet_link_tag "registrations", :media => "all" %>

<div class="card text-center">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      
      <h2 class="card-title">編集</h2>

      <div class="edit_field">
        <%= f.label :プロフィール画像 %><br />
        <%= f.file_field :avatar, :class => "form-control" %>
      </div>

      <div class="edit_field">
        <%= f.label :プロフィール文 %><br />
        <%= f.text_field :introduction, :class => "form-control", :placeholder => "自己紹介文を追加" %>
        <% if resource.errors.include?(:introduction) %>
          <% resource.errors.full_messages_for(:introduction).each do |msg| %>
            <p class="alert"><%= msg %></p>
          <% end %>
        <% end %>
      </div>
    
      <div class="edit_field">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :name, :class => "form-control", autofocus: true, autocomplete: "name" %>
        <% if resource.errors.include?(:name) %>
          <% resource.errors.full_messages_for(:name).each do |msg| %>
            <p class="alert"><%= msg %></p>
          <% end %>
        <% end %>
      <div>
    
      <div class="edit_field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, :class => "form-control", autofocus: true, autocomplete: "email" %>
        <% if resource.errors.include?(:email) %>
          <% resource.errors.full_messages_for(:email).each do |msg| %>
            <p class="alert"><%= msg %></p>
          <% end %>
        <% end %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="edit_field">
        <%= f.label :新しいパスワード %><br />
        <%= f.password_field :password, :class => "form-control", :placeholder => "#{@minimum_password_length}文字以上", autocomplete: "new-password" %>
        <% if resource.errors.include?(:password) %>
          <% resource.errors.full_messages_for(:password).each do |msg| %>
            <p class="alert"><%= msg %></p>
          <% end %>
        <% end %>
      </div>
    
      <div class="edit_field">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, :class => "form-control", autocomplete: "new-password" %>
        <% if resource.errors.include?(:password_confirmation) %>
          <% resource.errors.full_messages_for(:password_confirmation).each do |msg| %>
            <p class="alert"><%= msg %></p>
          <% end %>
        <% end %>
      </div>
    
      <div class="field">
        <%= f.label :現在のパスワード %><br />
        <%= f.password_field :current_password, :class => "form-control", autocomplete: "current-password" %>
        <% if resource.errors.include?(:current_password) %>
          <% resource.errors.full_messages_for(:current_password).each do |msg| %>
            <p class="alert"><%= msg %></p>
          <% end %>
        <% end %>
      </div>
    
      <div class="actions">
        <%= f.submit "更新", :class => "btn btn-primary update" %>
      </div>
    <% end %>
    
    <%# <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
    
    <%= link_to "戻る", :back %>
  </div>
</div>