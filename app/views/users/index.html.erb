<%= stylesheet_link_tag "users", :media => "all" %>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <h2 class="card-title">Profile</h2>
                    <% if @user.avatar? %>
                        <%= image_tag @user.avatar.url, class: 'avatar' %>
                    <% else %>
                        <%= image_tag("default.jpg") %>
                    <% end %>
                    <p><%= @user.name %></p>
                    <p><%= @user.email %></p>
                    <%= link_to "編集", edit_user_registration_path, class: 'post', class: "btn btn-primary edit" %>
                </div>
            </div>
        </div>
        <div class="col-md-6">
        </div>
    </div>
</div>